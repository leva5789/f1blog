<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_background"
    android:padding="16dp">

    <!-- Legközelebbi pálya -->
    <TextView
        android:id="@+id/textViewNearestCircuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legközelebbi pálya betöltése..."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Versenynaptár lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCircuits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Teszt értesítés gomb -->
    <Button
        android:id="@+id/buttonTestNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Teszt Értesítés Küldése"
        style="@style/ButtonStyle" />

</LinearLayout>